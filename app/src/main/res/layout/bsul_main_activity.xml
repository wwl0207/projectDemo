            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="动态添加按钮"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="自动换行"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv17"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="列表伸缩控件"
            android:textColor="@color/white"
            android:textSize="15sp" />
