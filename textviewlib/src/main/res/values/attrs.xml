<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MenuItemLayout">
        <attr name="title_text" format="string" />
        <attr name="content_text" format="string" />
        <attr name="hint_text" format="string" />
        <attr name="icon_reference" format="reference" />
        <attr name="icon_uri" format="string" />
        <attr name="jump_url" format="string" />
        <attr name="divide_line_style" format="integer" />
        <attr name="title_color" format="reference|color" />
        <attr name="content_color" format="reference|color" />
        <attr name="title_size" format="dimension" />
        <attr name="content_size" format="dimension" />
        <attr name="show_title_icon" format="boolean" />
        <attr name="show_content_icon" format="boolean" />
        <attr name="show_content_tv" format="boolean" />
        <attr name="show_right_icon" format="boolean" />
        <attr name="content_eable" format="boolean" />
        <attr name="maxlength" format="integer"/>
        <attr name="content_isbold" format="boolean"/>
        <attr name="conent_paddingleft" format="dimension"/>
        <attr name="conent_paddingright" format="dimension"/>
        <attr name="content_gray">
            <flag name="left" value="1"/>
            <flag name="center" value="2"/>
            <flag name="right" value="3"/>
        </attr>
        <attr name="content_inputType">
            <enum name="nonal" value="1"/>
            <enum name="phone" value="2"/>
            <enum name="number" value="3"/>
            <enum name="english" value="4"/>
            <enum name="password" value="5"/>
        </attr>
    </declare-styleable>
</resources>
