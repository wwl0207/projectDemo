<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_gravity="center_horizontal"
        android:id="@+id/cv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="@dimen/my300dp"
        android:layout_height="@dimen/my150dp">

        <RelativeLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_dialog_content"
                android:layout_marginLeft="@dimen/my10dp"
                android:layout_marginRight="@dimen/my10dp"
                android:textSize="@dimen/my14sp"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

<TextView
    android:background="#DEDEDE"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my1dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my50dp">

          <TextView
              android:visibility="visible"
              android:id="@+id/tv_dialog_cancel"
              android:background="@android:color/white"
              android:layout_weight="1"
              android:text="取消"
              android:textColor="#555555"
              android:gravity="center"
              android:layout_width="@dimen/my0dp"
              android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_dialog_confirm"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="#f41044"
                android:text="立即前往"
                android:gravity="center"
                android:layout_width="@dimen/my0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>