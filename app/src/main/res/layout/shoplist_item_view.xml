<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/item_view"
    android:layout_marginBottom="@dimen/my10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/my5dp"
        app:cardElevation="@dimen/my0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/my15dp"
            android:paddingLeft="@dimen/my15dp"
            android:paddingRight="@dimen/my5dp"
            android:paddingTop="@dimen/my15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/my5dp"
                app:cardElevation="@dimen/my0dp">

                <ImageView
                    android:id="@+id/shop_img"
                    android:layout_width="@dimen/my90dp"
                    android:layout_height="@dimen/my90dp"
                    android:background="@drawable/default_icon"
                    android:padding="@dimen/my1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_icon" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/cardview1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/my10dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/my16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shop_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/my3dp"
                    android:text=""
                    android:textColor="@color/C25"
                    android:textSize="@dimen/my14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/my3dp"
                    android:text="距0km"
                    android:textColor="@color/C5"
                    android:textSize="@dimen/my14sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/addr_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/my3dp">

                    <ImageView
                        android:id="@+id/addr_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/my3dp"
                        android:tint="@color/C5" />

                    <TextView
                        android:id="@+id/shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/addr_icon"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/my3dp"
                        android:text="地址"
                        android:textColor="@color/C5"
                        android:textSize="@dimen/my13sp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>