<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/my30dp"
    android:paddingRight="@dimen/my30dp">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/my280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/my8dp"
        app:cardElevation="@dimen/my5dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my165dp"
                    android:background="@drawable/main_ad_top">


                </ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/my15dp"
                        android:layout_marginLeft="@dimen/my30dp"
                        android:layout_marginRight="@dimen/my30dp"
                        android:layout_marginTop="@dimen/my80dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="@dimen/my8dp"
                        app:cardElevation="@dimen/my5dp"
                        app:cardPreventCornerOverlap="true"
                        app:layout_constraintTop_toTopOf="parent">


                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/my150dp"
                                android:layout_marginTop="@dimen/my50dp"
                                android:padding="@dimen/my8dp">

                                <TextView
                                    android:id="@+id/tv_dialog_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/my14sp" />

                            </RelativeLayout>


                        </ScrollView>


                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/my80dp"
                    android:layout_height="@dimen/my80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/my60dp"
                    android:background="@drawable/main_ad_alarm_icon" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_main_ad_sure"
                android:layout_width="@dimen/my250dp"
                android:layout_height="@dimen/my53dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/my8dp"
                android:background="@drawable/main_ad_btn_back">

                <TextView
                    android:id="@+id/versionchecklib_version_dialog_cancel"
                    android:layout_width="@dimen/my0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/versionchecklib_version_dialog_commit"
                    android:layout_width="@dimen/my220dp"
                    android:layout_height="@dimen/my40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="更新"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my14sp" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>