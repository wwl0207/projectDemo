<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/my1dp"
    android:background="@color/white" android:paddingLeft="@dimen/my10dp" android:paddingRight="@dimen/my10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" android:paddingBottom="@dimen/my5dp"
        android:text="地址" android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/my16sp" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="地址"
        android:textColor="@color/C5"
        android:textSize="@dimen/my14sp" />
</LinearLayout>